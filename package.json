{
  "name": "release-bump",
  "version": "2.2.1",
  "description": "Handle version bump tasks for a code release.",
  "keywords": [
    "release",
    "bump",
    "version",
    "changelog",
    "wordpress"
  ],
  "homepage": "https://github.com/paulshryock/release-bump#readme",
  "bugs": {
    "url": "https://github.com/paulshryock/release-bump/issues"
  },
  "repository": "paulshryock/release-bump",
  "license": "Hippocratic 2.1",
  "author": "Paul Shryock <paul@pshry.com> (https://github.com/paulshryock)",
  "type": "module",
  "main": "src/Bump.js",
  "bin": {
    "release-bump": "cli.js"
  },
  "scripts": {
    "start": "node cli.js -p -q",
    "lint": "eslint . --ext .js,.cjs --fix",
    "build": "esbuild src/Bump.js --bundle --minify --outfile=dist/release-bump.min.cjs --platform=node",
    "pretest": "mkdir -p temp",
    "test": "ava",
    "posttest": "rm -rf temp",
    "test:watch": "ava --watch",
    "test:coverage": "c8 npm test && c8 check-coverage",
    "preversion": "npm run lint && npm run test:coverage",
    "version": "node cli.js -p -q && git add .",
    "postversion": "git push && git push --tags && npm publish"
  },
  "ava": {
    "files": [
      "!temp"
    ],
    "ignoredByWatcher": [
      "temp"
    ]
  },
  "dependencies": {
    "arg": "^5.0.0",
    "chalk": "^4.1.1",
    "meow": "^10.1.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.14.7",
    "ava": "^3.15.0",
    "c8": "^7.8.0",
    "esbuild": "^0.12.17",
    "eslint": "^7.31.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-compat": "^3.11.1",
    "simple-git": "^2.41.2"
  },
  "engines": {
    "node": ">=14.14.0",
    "npm": ">=3.0.0"
  }
}
