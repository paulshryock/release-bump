{
	"name": "release-bump",
	"version": "3.0.0-alpha.68",
	"private": false,
	"description": "Bumps Changelog and docblock versions for a code release.",
	"keywords": [
		"bump",
		"changelog",
		"docblock",
		"jsdoc",
		"release",
		"version"
	],
	"homepage": "https://www.releasebump.dev",
	"bugs": {
		"url": "https://github.com/paulshryock/release-bump/issues/new?assignees=&labels=&template=bug_report.md&title="
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/paulshryock/release-bump.git"
	},
	"license": "MIT",
	"author": "Paul Shryock (https://github.com/paulshryock)",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js"
		}
	},
	"types": "./dist/index.d.ts",
	"bin": {
		"release-bump": "./dist/cli.cjs"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"bump": "./dist/cli.cjs -- -epq",
		"clean": "run-p clean:*",
		"clean:dist": "rm -rf ./dist && mkdir -p ./dist",
		"clean:html": "rm -rf ./docs/dist && mkdir -p ./docs/dist",
		"cli": "ts-node ./dist/cli.ts",
		"compile": "run-p compile:*",
		"compile:module": "ts-node ./bin/compile.ts",
		"compile:module:watch": "npm run compile:module -- --watch",
		"compile:types": "tsc --project tsconfig-dist.json",
		"postcompile:types": "rm -rf ./dist/lib.d.ts",
		"format": "prettier --config=prettier.config.cjs --loglevel=warn --write .",
		"format:check": "prettier --check --config=prettier.config.cjs --loglevel=warn .",
		"lint": "run-p lint:*",
		"lint:fix": "npm run lint:js -- --fix",
		"lint:js": "eslint",
		"lint:pkg": "sort-package-json",
		"prepack": "npm run quality",
		"prepare": "ts-node bin/prepare.ts",
		"quality": "npm-run-all -s format lint:pkg -p typecheck test compile",
		"preserve": "npm run clean",
		"serve": "run-p serve:*",
		"serve:html": "npm run compile:html -- --serve",
		"serve:scss": "npm run compile:scss -- --watch",
		"start": "npm run serve",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"test:watch": "npm test -- --watch",
		"typecheck": "tsc",
		"typecheck:watch": "npm run typecheck -- --watch",
		"upgrade:all": "ncu --upgrade",
		"upgrade:dry-run": "ncu",
		"upgrade:minor": "ncu --target=minor --upgrade",
		"upgrade:patch": "ncu --target=patch --upgrade",
		"preversion": "if [[ $(git status -s) ]]; then exit 1; fi",
		"version": "run-s clean quality bump && git add ."
	},
	"devDependencies": {
		"@11ty/eleventy": "2.0.0",
		"@jest/globals": "29.4.2",
		"@types/jest": "29.4.0",
		"@types/mock-fs": "4.13.1",
		"@types/node": "18.13.0",
		"@types/yargs": "17.0.22",
		"@typescript-eslint/eslint-plugin": "5.52.0",
		"@typescript-eslint/parser": "5.52.0",
		"chokidar": "3.5.3",
		"esbuild": "0.17.8",
		"eslint": "8.34.0",
		"eslint-config-standard": "17.0.0",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-json-format": "2.0.1",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-promise": "6.1.1",
		"esm": "3.2.25",
		"husky": "8.0.3",
		"jest": "29.4.2",
		"jest-ts-webcompat-resolver": "1.0.0",
		"lint-staged": "13.1.2",
		"mock-fs": "5.2.0",
		"npm-check-updates": "16.7.4",
		"npm-run-all2": "6.0.4",
		"prettier": "2.8.4",
		"sass": "1.58.1",
		"sort-package-json": "2.4.1",
		"ts-jest": "29.0.5",
		"ts-node": "10.9.1",
		"tslib": "2.5.0",
		"typescript": "4.9.5",
		"yargs": "17.6.2",
		"zx": "7.1.1"
	},
	"engines": {
		"node": ">=8"
	}
}
