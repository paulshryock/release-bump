{
  "name": "release-bump",
  "version": "3.0.0-alpha.32",
  "private": false,
  "description": "Handle version bump tasks for a code release.",
  "keywords": [
    "bump",
    "changelog",
    "docblock",
    "jsdoc",
    "release",
    "version"
  ],
  "homepage": "https://github.com/paulshryock/release-bump#readme",
  "bugs": {
    "url": "https://github.com/paulshryock/release-bump/issues/new?assignees=&labels=&template=bug_report.md&title="
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulshryock/release-bump.git"
  },
  "license": "Hippocratic 2.1",
  "author": "Paul Shryock (https://github.com/paulshryock)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "release-bump": "./dist/cli.cjs"
  },
  "files": [
    "/src",
    "/dist"
  ],
  "scripts": {
    "bump": "./dist/cli.cjs -- -epq",
    "clean": "rm -rf ./dist",
    "cli": "ts-node ./dist/cli.ts",
    "compile": "run-p compile:*",
    "compile:source": "ts-node ./bin/compile.ts",
    "compile:types": "tsc --project tsconfig-dist.json",
    "postcompile:types": "rm -rf ./dist/lib.d.ts",
    "format": "prettier --loglevel=warn --write \"./!(dist)/**/*.{ts,js,{m,c}js,json}\"",
    "lint": "run-p lint:*",
    "lint:js": "eslint \"./!(tests)/**/*.{ts,d.ts,js,{m,c}js,json}\" --fix",
    "lint:pkg": "sort-package-json",
    "prepare": "husky install bin/husky",
    "quality": "npm-run-all --serial format --parallel lint typecheck --serial test",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "typecheck": "tsc",
    "typecheck:watch": "npm run typecheck -- --watch",
    "preversion": "if [[ $(git status -s) ]]; then exit 1; fi",
    "version": "npm-run-all --parallel clean quality --serial compile bump && git add ."
  },
  "devDependencies": {
    "@swc/cli": "0.1.57",
    "@swc/core": "1.2.163",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "chokidar": "^3.5.3",
    "esbuild": "^0.14.30",
    "eslint": "^8.12.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "esm": "^3.2.25",
    "husky": "^7.0.4",
    "jest": "27.5.1",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "npm-check-updates": "^12.5.7",
    "npm-run-all2": "^5.0.2",
    "prettier": "^2.6.2",
    "sort-package-json": "^1.55.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3",
    "zx": "^6.0.7"
  },
  "engines": {
    "node": ">=17.5.0"
  }
}
