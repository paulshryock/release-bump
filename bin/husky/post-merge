#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Maybe install npm dependencies.
if [ ! -n $(git diff --name-only HEAD@{1} HEAD | grep "^package-lock.json" > /dev/null 2>&1) ]; then
	echo "ğŸ“¦ updating npm dependencies."
	npm ci
elif [ ! -d "$(dirname $(dirname $(dirname "$0")))/node_modules" ]; then
	echo "ğŸ“¦ installing npm dependencies."
	npm ci
fi

# Audit production dependencies.
echo "ğŸ“¦ auditing production dependencies."
npm audit --omit=dev

# Check for outdated dependencies.
echo "ğŸ“¦ checking for outdated dependencies."
./node_modules/.bin/ncu
